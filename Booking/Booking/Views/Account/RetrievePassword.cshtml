        .captcha-wrap input[type="text"] {
            width: 150px !important;
            margin-bottom: 10px;
            margin-left: 10px;
        }

        .captcha-wrap .fa-refresh {
            vertical-align: middle;
            text-decoration: none;
        }

        .captcha-wrap .comment {
            line-height: 25px;
            vertical-align: top;
        }
