@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
        <ul class="nav navbar-nav">

            <li>
                <a title="동네예보" href='http://www.kma.go.kr/weather/forecast/timeseries.jsp' style="padding:0"><i class="weather"  style="padding:0"> </i></a>
            </li>
            <li id="realtime" class="login-info">
                <span class="hide-nav" style="color: #333;"><i class="fa fa-clock-o"></i><span id="currentdate"></span></span>
            </li>
            <li class="login-info">
                <a href='@Url.Action("UserInfo", "Account",new { mode="update"})'  style="color: #333;border: 1px solid #333;" class="only_tooltip" title="" data-original-title="회원정보수정"><i class="fa fa-lock"></i> <span>@Context.User.Identity.Name</span></a>
                <a href='@Url.Action("LogOut", "Account")'  style="color: #333;border: 1px solid #333;"><i class="fa fa-sign-out"></i>로그아웃</a>
            </li>
                @if (Context.User.Identity.AuthenticationType == "Admin")
                {
                    <li class="hide-menu"><a href="@Url.Action("UserList", "Account")"><i class="fa fa-book"></i> 회원관리</a></li>
                        <li class="hide-menu"><a href="@Url.Action("GolfPlace", "Home")"><i class="fa fa-book"></i> 골프장관리</a></li>
                }
            <li class="hide-menu"><a href="@Url.Action("ViewList","Home")"><i class="fa fa-book"></i> 부킹관리</a></li>

            <li class="hide-menu"><a href="@Url.Action("ViewGroup","Home")">&nbsp;&gt;&nbsp; 통계보기</a></li>
        </ul>
}
else
{
    <ul class="nav navbar-nav"></ul>
}
